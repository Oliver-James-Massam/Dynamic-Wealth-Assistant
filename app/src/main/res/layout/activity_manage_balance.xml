<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtSetBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Balance"
            android:inputType="number"></android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSetBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Balance"
        android:background="@color/colorPrimary"
        android:textColor="@color/buttonLabel"/>

    <Switch
        android:id="@+id/swRecur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:text="Recur on the 1st day of each month" />


</LinearLayout>